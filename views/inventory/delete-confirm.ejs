 <form id="deleteForm" action="/inv/delete" method="post">
  <label for="classificationList">Classification</label>
  <%- classificationSelect %>

  <label for="carMake">Make:</label>
    <input name="inv_make" id="carMake" type="text" minlength="3" placeholder="Min of 3 characters" readonly>
  <br>
  <label for="carModel">Model:</label>
    <input name="inv_model" id="carModel" type="text" minlength="3" placeholder="Min of 3 characters" readonly>
  <br>
  <label for="carYear">Year:</label>
    <input name="inv_year" id="carYear" type="number" min="1000" max="9999" placeholder= "4-digit year" readonly>
  <br>
  <label for="carPrice">Price:</label>
    <input name="inv_price" id="carPrice" type="number" step="0.01" min="1" placeholder="decimal or integer numbers only" readonly>
  <br>
  <button type="submit">Delete Vehicle</button>

  <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>

</form>
