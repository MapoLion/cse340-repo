<h1><%= title %></h1>

<%- messages() %>

<form action="/account/register" method="post">
    <label for="first-name">First Name:</label> 
    <br>
    <input type="text" id="first-name" name="account_firstname" required />
    
    <br>
    <br>
    <label for="last-name">Last Name:</label> 
    <br>
    <input type="text" id="last-name" name="account_lastname" required />
    
    <br>
    <br>


    <label for="email">Email Address:</label> 
    <br>
    <input type="email" id="email" name="account_email" required />
    
    <br>
    <br>

    <label for="password">Password:</label>
    <br>
    <input type="password" id="password" name="account_password" 
    pattern="^(?=.*[A-Z])(?=.*\d)(?=.*[^A-Za-z0-9]).{12,}$"
    title="Password must be at least 12 characters, include one uppercase letter, one number, and one special character." />
    
    <br>
    <br>
    <button type="submit" class="log-in">Register</button>

</form>