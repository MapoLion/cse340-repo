<h1><%= title %></h1>

<%- messages() %>

<form id="loginForm" action="/account/login" method="post">
    <label for="email">Email Address:</label> 
    <br>
    <input type="text" name="account_email" id="accountFirstname" required>
    
    <br>
    <br>

    <label for="password">Password:</label>
    <br>
    <input type="password" name="account_password" id="accountPassword"
    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"
    title="Password must be at least 12 characters, include one uppercase letter, one number, and one special character." required>
    
    <br>
    <br>
    <button type="submit" class="log-in">LOG IN</button>

    
    <p>No account? <a href="/account/register" class="sign-up">Sign up!</a></p>
</form>